<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TIStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_selector</item>
        <item name="hintTextColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>


    </style>

    <style name="TextInputET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:backgroundTint">@color/text_input_layout_selector</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
